<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2560">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="300"
        android:paddingTop="10dp">

        <TextView
            android:text="사용자 등록 후 목포대 학식의 편리한\n 학식 이용 서비스를 누리세요."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textAlignment="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1900"
        android:background="@drawable/round"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="180"
            android:weightSum="1440">

            <EditText
                android:id="@+id/InputId"
                android:hint="아이디 ( 학번 )"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1300"
                android:textSize="15dp"
                android:inputType="number"
                android:background="@drawable/signup_edit"
                android:textCursorDrawable="@drawable/cursor"
                android:singleLine="true"
                android:maxLength="6"/>
            <requestFocus/>
            <!-- 숫자만 입력 가능 -->
            <!-- 한줄 입력 -->
            <!-- 입력 글자 수 제한 -->
        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="180"
            android:weightSum="1440">

            <EditText
                android:id="@+id/InputPw"
                android:hint="비밀번호"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1300"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:background="@drawable/signup_edit"
                android:textCursorDrawable="@drawable/cursor"
                android:singleLine="true"/>
            <!-- 6~16자 영문 대 소문자, 숫자, 특수문자를 사용 -->

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="180"
            android:weightSum="1440">

            <EditText
                android:id="@+id/InputConfirmPw"
                android:hint="비밀번호 확인"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1300"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:background="@drawable/signup_edit"
                android:textCursorDrawable="@drawable/cursor"
                android:singleLine="true"/>
            <!-- 6~16자 영문 대 소문자, 숫자, 특수문자를 사용 -->

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="140">

            <TextView
                android:text="▶ 4자 이상의 숫자와 영문, 특수문자 조합 가능"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="180"
            android:weightSum="1440">

            <EditText
                android:id="@+id/InputName"
                android:hint="이름"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1300"
                android:textSize="15dp"
                android:background="@drawable/signup_edit"
                android:textCursorDrawable="@drawable/cursor"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="180"
            android:weightSum="1440">

            <EditText
                android:id="@+id/InputBirth"
                android:hint="생년월일 ( ex.931104 )"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1300"
                android:textSize="15dp"
                android:inputType="number"
                android:background="@drawable/signup_edit"
                android:textCursorDrawable="@drawable/cursor"
                android:singleLine="true"
                android:maxLength="6"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="180"
            android:weightSum="1440">

            <EditText
                android:id="@+id/Gender"
                android:hint="성별(M or W)"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1300"
                android:maxLength="1"
                android:background="@drawable/signup_edit"
                android:textCursorDrawable="@drawable/cursor"
                android:singleLine="true"
                android:textSize="15dp">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="180"
            android:weightSum="1440">

            <EditText
                android:id="@+id/PhoneNumber"
                android:hint="핸드폰 번호 ( - 없이 입력해주세요. )"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1300"
                android:textSize="15dp"
                android:inputType="phone"
                android:maxLength="11"
                android:background="@drawable/signup_edit"
                android:textCursorDrawable="@drawable/cursor"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="180"
            android:layout_marginBottom="15dp"
            android:weightSum="1440">

            <CheckBox
                android:id="@+id/SingupCheck"
                android:text="회원가입에 동의하십니까?"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1300"
                android:textSize="15dp"
                android:background="@drawable/signup_edit"
                android:textCursorDrawable="@drawable/cursor" />

        </LinearLayout>

    </LinearLayout> <!-- weightSum 12 끝 -->

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="300"
        android:weightSum="1440">

        <Button
            android:text="회원가입"
            android:id="@+id/Joinbtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1300"
            android:background="@drawable/login_btn" />

    </LinearLayout>

</LinearLayout>