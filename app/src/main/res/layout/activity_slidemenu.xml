<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:background="@drawable/slidemenu_bg"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:weightSum="2560">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="460"
        android:paddingTop="20dp">

        <ImageView
            android:src="@drawable/slidemenu_user"
            android:layout_width="85dp"
            android:layout_height="85dp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="250"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/slide_nameTx"
            android:text="맛있는 한끼 되세요."
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="260">

        <Button
            android:id="@+id/btnMenuModify"
            android:text="회원정보수정"
            android:background="@drawable/slidemenu_btns"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="190">

        <Button
            android:id="@+id/btnMenuFavorite"
            android:text="즐겨찾기"
            android:background="@drawable/slidemenu_btns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="190">

        <Button
            android:id="@+id/btnMenuStudent"
            android:text="학생"
            android:background="@drawable/slidemenu_btns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="190">

        <Button
            android:id="@+id/btnMenuTeacher"
            android:text="교직원"
            android:background="@drawable/slidemenu_btns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="190">

        <Button
            android:id="@+id/btnMenuBuylist"
            android:text="구매내역"
            android:background="@drawable/slidemenu_btns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="190">

        <Button
            android:id="@+id/btnMenuReview"
            android:text="리뷰"
            android:background="@drawable/slidemenu_btns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="190">

        <Button
            android:id="@+id/btnMenuQuestion"
            android:text="Q/A"
            android:background="@drawable/slidemenu_btns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="190">

        <Button
            android:id="@+id/btnMenuSetting"
            android:text="환경설정"
            android:background="@drawable/slidemenu_btns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="260">

        <Button
            android:id="@+id/btnLogout"
            android:text="로그아웃"
            android:background="@drawable/slidemenu_btns2"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:onClick="onClick"/>

    </LinearLayout>

</LinearLayout>




